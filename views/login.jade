extends layout

block content
	if invalid
		.error Please enter a valid email address and password.

	form.form(role="form", name="login", action="/login", method="post")
		.form-group
			input.form-control(name='email', type='text', placeholder="Email")
		.form-group
			input.form-control(name='pass', type='password', placeholder="Password")
		button.btn.btn-success(type='submit') Sign In